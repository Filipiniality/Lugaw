<title>EVIL LISTICLE</title>
<head>
<style>
    :root {

    /* applies to all areas */
    --font-family: Verdana, sans-serif;
    --font-size: 18px;
    --line-height: 1.6;
    --font-color: white;
    --link-color: darkred;
    --link-text-decoration: none;

    /* main content (between sidebars) */
    --content-padding: 30px;

    /* header */
    --header-height: 155px;
    --header-background: url(burningBright.gif);
    --header-margin-bottom: 5px;

    /* footer 
    --footer-height: 30px;*/
    --footer-bg-color: #161616;

    /* container */
    --container-width: 868px;
    --container-bg-color: #161616;

    /* controls the gap between the content and the footer */
    --row-gap: 0;

    --background-color: #161616;
    }
    
    /*   */

    html,
    body {
        margin: 0;
        padding: 0;
        --background-color: #161616;
        font-family: var(--font-family);
        font-size: var(--font-size);
        line-height: var(--line-height);
        color: var(--font-color);
    }
    
    .theme-eyestrain {
    background-image: url('listicleBackground.jpg');
    }
    
    .theme-no-eyestrain {
    background: linear-gradient(#58111A, #161616);
    }

    button {
    cursor:pointer;
    border: none;
    background-color: #a21232;
    width: 160px;
    margin-top: 8px;
    padding: 10px 20px;
    color: #FFF;
    text-align: center;
    letter-spacing: 1px;
    text-transform: uppercase;
    display: block;
    margin-right: auto;
    margin-left: auto;
    }
    
    button:hover {
    background-color: #c00;
    }


    a:hover { text-decoration: underline;}
    
    body a {
        color: var(--link-color);
        font-weight: bold;
        text-decoration: var(--link-text-decoration);
    }
    
    h1, h2 {
        text-transform: uppercase;
        text-align: center;
        margin: auto;
    }
    
    ul {
        list-style-image: url('flameBullet.gif');
        padding-left: 10;
    }
    
    li:not(:last-child) {
    margin-bottom: 5px;
}

    #main-container {
        max-width: var(--container-width);
        margin: 0 auto;
        background-color: var(--container-bg-color);
    }

    .flex {
        display: flex;
        margin-bottom: var(--row-gap);
    }

    .content-wrap {
        margin-top: var(--content-margin-top);
    }

    #content-container {
        width: 60%;
        margin-bottom: var(--row-gap);
        background-color: var(--content-bg-color);
    }

    #header-contained {
        height: var(--header-height);
        margin-bottom: var(--header-margin-bottom);
        background-image: var(--header-background);
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center center;
    }

    #footer {
        height: var(--footer-height);
        text-align: center;
        color: var(--font-color);
        background-color: var(--footer-bg-color);
    }

    .wrapper {
        padding-left: var(--content-padding);
        padding-right: var(--content-padding);
        padding-top: var(--sidebar-padding);
    }
    
.thumbnail {
    display: block;
    max-width: 50%;
    margin-right: auto;
    margin-left: auto;
    text-align: center;
    }

    .footer-wrapper {
/*        padding: 5px;*/
    }

@media only screen and (max-width: 868px) {
        .flex {
            flex-wrap: wrap;
        }
        
        #content-container {
            width: 100%;
            display: block;
            order: 1;
            margin-bottom: 10px;
        }

html,body {
font-size:14px;
}
.thumbnail {
max-width: 100%;
    }
</style>
    <script>
        // function to set a given theme/color-scheme
        function setTheme(themeName) {
            localStorage.setItem('theme', themeName);
            document.documentElement.className = themeName;
        }

        // function to toggle between eyestrain and eyesaver
        function toggleTheme() {
            if (localStorage.getItem('theme') === 'theme-eyestrain') {
                setTheme('theme-no-eyestrain');
            } else {
                setTheme('theme-eyestrain');
            }
        }

        // Immediately invoked function to set the theme on initial load
        (function () {
            if (localStorage.getItem('theme') === 'theme-dark') {
                setTheme('theme-eyestrain');
                document.getElementById('slider').checked = false;
            } else {
                setTheme('theme-no-eyestrain');
              document.getElementById('slider').checked = true;
            }
        })();
    </script>
</head>
<div id="header-full" style="display: none;"></div>

<div id="main-container">
    <div id="header-contained"></div>
    <div class="content-wrap flex alignment">
        <div id="content-container" style="flex-grow: 1;">
            <div class="wrapper">
            {% markdown %}
  {%- include "markdown/evil-listicle-markdown.md" -%}
{% endmarkdown %}
            </div>
        </div>
    </div>
    <div id="footer">
        <div class="footer-wrapper"><a href='../sitemap/'><img src="flameGuy.gif"><br>click to return to sitemap</a></div>
    </div>
</div>
